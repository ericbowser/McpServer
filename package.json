{
  "name": "MCP Server",
  "version": "1.0.0",
  "description": "LaserTags Pet ID Tag E-commerce Backend with MCP Server Management",
  "main": "index.js",
  "keywords": [
    "laser-engraving",
    "pet-tags",
    "e-commerce",
    "qr-codes",
    "mcp",
    "model-context-protocol"
  ],
  "author": "E.R.B.",
  "license": "MIT",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "db:setup": "psql -U postgres -f ./documentdb/lasertags-schema.sql",
    "test": "jest",
    "clean": "rm -R node_modules && rm package-lock.json && npm install",
    "mcp:build:cloud": "cd cloudprepper_mcp && npm run build",
    "mcp:install:all": "npm run mcp:install:cloudprepper && npm run mcp:install:lasertags && npm run mcp:install:postgres",
    "mcp:build:lasertg": "cd lasertg_mcp && npm run build",
    "mcp:install:cloudprepper": "cd cloudprepper_mcp && npm install",
    "mcp:install:lasertags": "cd lasertg_mcp && npm install",
    "mcp:build:lasertags": "cd lasertg_mcp && npm ",
    "mcp:install:postgres": "cd postgres_mcp && npm install",
    "mcp:setup": "npm run mcp:install:all && npm run mcp:build",
    "mcp:test:cloudprepper": "cd cloudprepper_mcp && npm run inspect",
    "mcp:test:lasertags": "cd lasertg_mcp && node index.js",
    "mcp:test:postgres": "cd postgres_mcp && node index.js",
    "mcp:run:all": "start-all-mcp.bat",
    "inspect": "npm run mcp:test:cloudprepper"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "log4js": "^6.9.1",
    "log4js-json-layout": "^2.2.3",
    "nodemailer": "^7.0.11",
    "pg": "^8.12.0",
    "qrcode": "^1.5.3",
    "stripe": "^13.10.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "dotenv": "^17.2.3",
    "jest": "^29.5.0",
    "nodemon": "^3.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typescript": "^5.9.3"
  }
}
